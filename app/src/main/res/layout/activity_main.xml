<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6EF"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/fab_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/faab_panel">

        <ImageButton
            android:id="@+id/market_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:translationX="10dp"
            app:srcCompat="@drawable/ic_market"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/like_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:translationX="35dp"
            app:srcCompat="@drawable/ic_like"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/box_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:translationX="70dp"
            app:srcCompat="@drawable/ic_box"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/tri_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:onClick="OpnTri"
            android:translationX="105dp"
            app:srcCompat="@drawable/ic_tri"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Головна"
            android:textColor="#545469"
            android:translationX="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Обране"
            android:textColor="#545469"
            android:translationX="45dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="Кошик"
            android:textColor="#545469"
            android:translationX="85dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="Меню"
            android:textColor="#545469"
            android:translationX="120dp" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/po_bg">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:translationX="75dp"
            android:translationY="15dp"
            app:srcCompat="@drawable/ic_str" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ПРОДУКТИ ОНЛАЙН"
            android:textColor="#3D3E52"
            android:translationX="90dp"
            android:translationY="25dp" />

        <ImageButton
            android:id="@+id/menu_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:translationX="150dp"
            app:srcCompat="@drawable/ic_tri"
            app:tint="#6CC51D"
            tools:ignore="SpeakableTextPresentCheck" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:translationY="65dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/search_bg" />

        <ImageButton
            android:id="@+id/search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#00FFFFFF"
            android:translationX="40dp"
            android:translationY="20dp"
            app:srcCompat="@drawable/ic_search"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Що шукаєте?"
            android:textColor="#545469"
            android:textSize="16sp"
            android:translationX="100dp"
            android:translationY="40dp" />

        <ImageButton
            android:id="@+id/ok_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#00FFFFFF"
            android:translationX="300dp"
            android:translationY="20dp"
            app:srcCompat="@drawable/ic_ok"
            tools:ignore="SpeakableTextPresentCheck" />
    </GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_gravity="center" />

</FrameLayout>