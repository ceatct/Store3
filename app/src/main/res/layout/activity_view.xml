<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:translationY="425dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/search_bg" />

        <ImageButton
            android:id="@+id/search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#00FFFFFF"
            android:translationX="40dp"
            android:translationY="20dp"
            app:srcCompat="@drawable/ic_alo"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ok_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#00FFFFFF"
            android:translationX="300dp"
            android:translationY="20dp"
            app:srcCompat="@drawable/ic_ok"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:ems="10"
            android:hint="+380 (ХХ) ХХХ-ХХ-ХХ"
            android:inputType="phone"
            android:textColor="#545469"
            android:textColorHighlight="#545469"
            android:textColorHint="#545469"
            android:translationX="100dp"
            android:translationY="30dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:layout_gravity="top">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:backgroundTint="#00FFFFFF"
            android:translationX="185dp"
            app:srcCompat="@drawable/ic_vniz"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/tov"
            android:layout_width="408dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:translationX="-48dp"
            android:translationY="45dp"
            app:srcCompat="@drawable/big_sliva" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:translationY="325dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Слива Венгарка вагова, 1 кг"
            android:textColor="#3D3E52"
            android:textSize="16sp"
            android:translationX="15dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="14.90 ₴"
            android:textColor="#6CC51D"
            android:textSize="20sp"
            android:translationX="15dp"
            android:translationY="10dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="#00FFFFFF"
            android:translationX="100dp"
            android:translationY="-20dp"
            app:srcCompat="@drawable/ic_orange_like"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Купити в 1 клік"
            android:textColor="#3D3E52"
            android:textSize="18sp"
            android:translationX="15dp"
            android:translationY="-20dp" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:background="#E5E5E5"
        android:backgroundTint="#E5E5E5"
        android:translationY="525dp">


        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Додаткова інформація"
            android:textColor="#7B7B91"
            android:textSize="14sp"
            android:translationX="15dp"
            android:translationY="5dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="об'єм"
            android:textColor="#3D3E52"
            android:translationX="15dp"
            android:translationY="10dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:translationX="75dp"
            android:translationY="20dp"
            app:srcCompat="@drawable/ic_line" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="1 кг"
            android:textColor="#3D3E52"
            android:translationX="100dp"
            android:translationY="10dp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="info"
            android:textAlignment="textStart"
            android:textColor="#545469"
            android:textSize="15sp"
            android:translationY="20dp" />
    </GridLayout>

    <GridLayout
        android:id="@+id/fab_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/faab_panel">

        <ImageButton
            android:id="@+id/box_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:translationX="325dp"
            app:srcCompat="@drawable/ic_green_kosh"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Закрити"
            android:textColor="#545469"
            android:translationX="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="Кошик"
            android:textColor="#545469"
            android:translationX="-25dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#00FFFFFF"
            android:translationX="15dp"
            android:translationY="12dp"
            app:srcCompat="@drawable/ic_x"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="#6CC51D"
            android:text="Додати в кошик"
            android:translationX="100dp"
            android:translationY="15dp" />

    </GridLayout>

</FrameLayout>